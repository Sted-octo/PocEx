{
    "manifest_version": 3,
    "name": "PocEx Octo",
    "description": "Va permettre l'interaction avec de l'IA, Ã  la sauce Octo chti !",
    "version": "0.1",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icons/octo16.png",
        "48": "icons/octo48.png", 
        "128": "icons/octo128.png"
    },
    "action": {
        "default_icon": {
        "16": "icons/octo16.png",
        "48": "icons/octo48.png",
        "128": "icons/octo128.png"
        }
    },

    "content_scripts": [
      {
        "matches": ["https://docs.google.com/presentation/*"],
        "js": ["main.js"],
        "type": "module"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/octo48.png", "ui/toolbar.js"],
        "matches": ["https://docs.google.com/*"]
      }
    ]
  }